# ============================================================
# REQUIRED: SMTP Configuration
# ============================================================
PORT=8080

# SMTP server settings (required for email notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=info@doclogic.eu
SMTP_PASS=change_me

# Where to send lead notifications
EMAIL_TO=DocLogic <info@doclogic.eu>

# System sender email (used for envelope-from / sender for deliverability)
# If empty, code falls back to SMTP_USER
# Example: "DocLogic <info@doclogic.eu>"
EMAIL_FROM=info@doclogic.eu

# Autoreply sender (for confirmation emails to clients)
# If empty, code falls back to EMAIL_FROM or SMTP_USER
AUTOREPLY_FROM=

# ============================================================
# Lead Email Customization (NO CODE CHANGES NEEDED)
# ============================================================
#
# All templates support placeholders that will be replaced with actual data.
# Use "\n" for newlines in .env values.
#
# Available placeholders:
#   TEXT template: {name}, {company}, {email}, {phone}, {message}, {createdAt}, {ip}
#                   {emailOrDash}, {phoneOrDash}, {messageOrDash}, {ipOrDash}
#   HTML template: {nameHtml}, {companyHtml}, {emailHtml}, {phoneHtml},
#                  {messageHtml}, {createdAtHtml}, {ipHtml} (already HTML-escaped)
#

# Mode for "From" header:
# - client: try to set header From to client's email (may be rewritten by some SMTP providers)
# - system: always use system email in From (more deliverable), client email is still in Reply-To
LEAD_EMAIL_FROM_MODE=client

# Header From format (only used when LEAD_EMAIL_FROM_MODE=client)
# Placeholders: {name}, {company}, {email}
# Example: "Ivan Ivanov (ACME Corp)" <ivan@acme.com>
LEAD_EMAIL_FROM_TEMPLATE={name} ({company}) <{email}>

# Subject template
# Placeholders: {name}, {company}
LEAD_EMAIL_SUBJECT_TEMPLATE=DocLogic: новый запрос от {name} {company}

# Text body template (use "\n" for newlines)
# Placeholders: {name}, {company}, {emailOrDash}, {phoneOrDash}, {messageOrDash}, {createdAt}, {ipOrDash}
LEAD_EMAIL_TEXT_TEMPLATE=Новый запрос DocLogic\n\nИмя: {name}\nКомпания: {company}\nEmail: {emailOrDash}\nТелефон: {phoneOrDash}\n\nКомментарий:\n{messageOrDash}\n\nДата: {createdAt}\nIP: {ipOrDash}

# HTML body template (use "\n" for newlines)
# Placeholders (HTML-escaped): {nameHtml}, {companyHtml}, {emailHtml}, {phoneHtml}, {messageHtml}, {createdAtHtml}, {ipHtml}
LEAD_EMAIL_HTML_TEMPLATE=<h2>Новый запрос DocLogic</h2>\n<ul>\n  <li><b>Имя:</b> {nameHtml}</li>\n  <li><b>Компания:</b> {companyHtml}</li>\n  <li><b>Email:</b> {emailHtml}</li>\n  <li><b>Телефон:</b> {phoneHtml}</li>\n</ul>\n<p><b>Комментарий:</b><br/>{messageHtml}</p>\n<p style="color:#64748b;font-size:12px;">IP: {ipHtml} • {createdAtHtml}</p>

# ============================================================
# OPTIONAL: Telegram Notifications
# ============================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ============================================================
# OPTIONAL: WhatsApp via Twilio (currently disabled in code)
# ============================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_WHATSAPP=
WHATSAPP_TO=


