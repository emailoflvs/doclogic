---
interface Props {
  class?: string;
  size?: 'sm' | 'md' | 'lg' | 'xl';
}

const { class: className = '', size = 'lg' } = Astro.props;

const sizeClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-4xl',
  lg: 'max-w-6xl',
  xl: 'max-w-7xl'
};
---

<div class={`container mx-auto px-4 ${sizeClasses[size]} ${className}`}>
  <slot />
</div>




